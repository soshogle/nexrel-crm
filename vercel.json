{
  "version": 2,
  "buildCommand": "NODE_OPTIONS='--max-old-space-size=8192' npx next build",
  "functions": {"app/api/**/*.ts": {"maxDuration": 30}},
  "crons": [
    {"path": "/api/cron/twilio-health-monitor", "schedule": "*/2 * * * *"},
    {"path": "/api/cron/blog-generator", "schedule": "0 9,15 * * *"}
  ],
  "redirects": [
    {"source": "/:path*", "has": [{"type": "host", "value": "www.soshogle.com"}], "destination": "https://www.nexrel.soshogle.com/:path*", "permanent": true},
    {"source": "/:path*", "has": [{"type": "host", "value": "soshogle.com"}], "destination": "https://www.nexrel.soshogle.com/:path*", "permanent": true}
  ]
}
